@{
    ViewData["Title"] = "Vyhledání pojištěnce";
}

<h2 class="text-center mb-4">Najdi pojištěnce</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Najdi" method="post" class="card p-4 shadow">
            <div class="form-group mb-3">
                <label for="jmeno">Jméno</label>
                <input name="jmeno" id="jmeno" class="form-control" placeholder="Zadej jméno" required />
            </div>
            <div class="form-group mb-4">
                <label for="prijmeni">Příjmení</label>
                <input name="prijmeni" id="prijmeni" class="form-control" placeholder="Zadej příjmení" required />
            </div>
            <button type="submit" class="btn btn-info w-100">
                <i class="bi bi-search"></i> Hledat
            </button>
        </form>
    </div>
</div>
