@model List<EvidencePojistencu.Models.Pojistenec>

@{
    ViewData["Title"] = "Výpis pojištěnců";
}

<h2 class="text-center mb-4">Seznam pojištěnců</h2>

@if (Model.Count == 0)
{
    <p class="text-muted text-center">Žádní pojištěnci nejsou evidováni.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Jméno</th>
                <th>Příjmení</th>
                <th>Věk</th>
                <th>Telefon</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Jmeno</td>
                    <td>@p.Prijmeni</td>
                    <td>@p.Vek</td>
                    <td>@p.Telefon</td>
                </tr>
            }
        </tbody>
    </table>
}
